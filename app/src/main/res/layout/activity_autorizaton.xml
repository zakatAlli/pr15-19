<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutorizatonActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Авторизация"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/autorizationLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Логин"
        android:inputType="text"
        android:text="vova"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/autorizationPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="text"
        android:text="vova"
        app:layout_constraintEnd_toEndOf="@+id/autorizationLogin"
        app:layout_constraintStart_toStartOf="@+id/autorizationLogin"
        app:layout_constraintTop_toBottomOf="@+id/autorizationLogin" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Войти"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/autorizationPassword"
        app:layout_constraintStart_toStartOf="@+id/autorizationPassword"
        app:layout_constraintTop_toBottomOf="@+id/autorizationPassword" />

    <TextView
        android:id="@+id/txtRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Нет аккаунта?\nРегистрация"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/buttonEnter"
        app:layout_constraintStart_toStartOf="@+id/buttonEnter"
        app:layout_constraintTop_toBottomOf="@+id/buttonEnter" />
</androidx.constraintlayout.widget.ConstraintLayout>